@page
@model WineWarehouseManagementSystem.Pages.RoomPages.UpdateShelfModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}

<h1 style="text-align: center; font-size: 24px; color: #333;">
    Update shelf
</h1>
@if (TempData["Message"] != null)
{
    <h2 style="text-align: center; color: #4CAF50;">@TempData["Message"]</h2>
}
<form method="post" style="max-width: 500px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="shelf.ShelfId" style="margin-bottom: 5px; font-weight: bold;">Shelf ID</label>
        <input asp-for="shelf.ShelfId" value="@Model.shelf.ShelfId" readonly
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #e9ecef;" />
    </div>
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="shelf.ShelfName" style="margin-bottom: 5px; font-weight: bold;">Shelf Name</label>
        <input asp-for="shelf.ShelfName" value="@Model.shelf.ShelfName" readonly
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #e9ecef;" />
    </div>
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="shelf.BrewingRoomId" style="margin-bottom: 5px; font-weight: bold;">Brewing Room Id</label>
        <input asp-for="shelf.BrewingRoomId" value="@Model.shelf.BrewingRoomId" readonly
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="shelf.MaxQuantity" style="margin-bottom: 5px; font-weight: bold;">Max Quantity</label>
        <input asp-for="shelf.MaxQuantity" value="@Model.shelf.MaxQuantity" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="shelf.UseQuantity" style="margin-bottom: 5px; font-weight: bold;">Use Quantity</label>
        <input asp-for="shelf.UseQuantity" value="@Model.shelf.UseQuantity" readonly
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="text-align: center;">
        <button type="submit"
                style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
            Update shelf
        </button>
    </div>
</form>

