@page
@model WineWarehouseManagementSystem.Pages.RoomPages.ViewBrewingRoomModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
    <link rel="stylesheet" href="/css/ExportPageStyle.css">

}
<div style="max-width: 500px; margin: 20px auto;">
    <form method="get" asp-page="" asp-page-handler="SearchByName" style="display: flex; gap: 10px;">
        <input type="text" name="name" placeholder="Please enter brewing room's name to search"
               style="flex: 1; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
        <button type="submit" class="btnSearch">
            Search
        </button>
        <a class="btnCreateExport " href="/RoomPages/CreateBrewingRoom">Create New Brewing Room</a>
    </form>
</div>



@if (Model.BrewingRoomList != null && Model.BrewingRoomList.Any())
{
    <table style="width: 80%; margin: 15px auto; border-collapse: collapse; font-family: Arial, sans-serif;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="border: 1px solid black ">Brewing Room ID</th>
                <th style="border: 1px solid black ">Room Name</th>
                <th style="border: 1px solid black ">Temparature</th>
                <th style="border: 1px solid black ">Humidity</th>
                <th style="border: 1px solid black ">Note</th>
                <th style="border: 1px solid black">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brewingRoom in Model.BrewingRoomList)
            {
                <tr>
                    <td style="border: 1px solid black ">@brewingRoom.BrewingRoomId</td>
                    <td style="border: 1px solid black ">@brewingRoom.RoomName</td>
                    <td style="border: 1px solid black ">@brewingRoom.Temperature</td>
                    <td style="border: 1px solid black ">@brewingRoom.Humidity</td>
                    <td style="border: 1px solid black ">@brewingRoom.Note</td>
                    <td style="border: 1px solid black ">
                        <form method="get" asp-page="/RoomPages/UpdateBrewingRoom" style="margin: 0;">
                            <input type="hidden" name="id" value="@brewingRoom.BrewingRoomId" />
                            <button type="submit" style="padding: 6px 12px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                Update
                            </button>
                            </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Brewing Room available.</p>
}
