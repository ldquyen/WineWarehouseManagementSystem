@page
@model WineWarehouseManagementSystem.Pages.RoomPages.CreateBrewingRoomModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}

@if (TempData["Message"] != null)
{
    <h2 style="text-align: center; color: #4CAF50;">@TempData["Message"]</h2>
}

<form method="post" style="max-width: 500px; margin: 20px auto; font-family: Arial, sans-serif;">
    <div style="margin-bottom: 15px;">
        <label asp-for="BrewingRoom.RoomName" style="display: block; margin-bottom: 5px; font-weight: bold;">Brewing Room Name</label>
        <input asp-for="BrewingRoom.RoomName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px;">
        <label asp-for="BrewingRoom.Temperature" style="display: block; margin-bottom: 5px; font-weight: bold;">Temperature</label>
        <input asp-for="BrewingRoom.Temperature" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="BrewingRoom.Humidity" style="display: block; margin-bottom: 5px; font-weight: bold;">Humidity</label>
        <input asp-for="BrewingRoom.Humidity" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="BrewingRoom.Note" style="display: block; margin-bottom: 5px; font-weight: bold;">Note</label>
        <input asp-for="BrewingRoom.Note" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <button type="submit" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; font-size: 1em; cursor: pointer;">
        Create Brewing Room
    </button>
</form>