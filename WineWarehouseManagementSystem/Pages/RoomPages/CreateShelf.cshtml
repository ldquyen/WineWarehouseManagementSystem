@page
@model WineWarehouseManagementSystem.Pages.RoomPages.CreateShelfModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}

@if (TempData["Message"] != null)
{
    <h2 style="text-align: center; color: #4CAF50;">@TempData["Message"]</h2>
}
<form method="post" style="max-width: 500px; margin: 20px auto; font-family: Arial, sans-serif;background-color: white;padding: 10px;border-radius:8px">
    <div style="margin-bottom: 15px;">
        <label asp-for="Shelf.ShelfName" style="display: block; margin-bottom: 5px; font-weight: bold;">Shelf Name</label>
        <input asp-for="Shelf.ShelfName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="BrewingRoom.BrewingRoomId" style="margin-bottom: 5px; font-weight: bold;">Brewing Room Name</label>
        <select asp-for="BrewingRoom.BrewingRoomId" asp-items="Model.BrewingRoomList"
                style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
        </select>
    </div>

    <div style="margin-bottom: 15px;">
        <label asp-for="Shelf.MaxQuantity" style="display: block; margin-bottom: 5px; font-weight: bold;">Max Quantity</label>
        <input asp-for="Shelf.MaxQuantity" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <button type="submit" style="width: 54%; padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; font-size: 1em; cursor: pointer; margin-left: 112px;">
        Create new Shelf of Brewing Room
    </button>
</form>

