<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WineWarehouseManagementSystem</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .sidebar {
            background-color: lightgray;
            color: black;
            padding: 15px;
            width: 200px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            border-right: 2px solid black;
        }

        .menu-item {
            margin: 15px 0;
        }

            .menu-item a {
                color: #5cb85c;
                text-decoration: none;
                font-weight: bold;
            }

        .submenu {
            display: none;
            list-style-type: none;
            padding-left: 15px;
            margin-top: 5px;
        }

            .submenu li a {
                color: white;
                text-decoration: none;
            }

        .logout-button {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #d9534f; /* Màu đỏ cho nút logout */
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            display: block; /* Để nút chiếm toàn bộ chiều rộng */
        }

            .logout-button a {
                color: white; /* Đảm bảo chữ màu trắng */
                text-decoration: none; /* Không có gạch chân */
                display: block; /* Để a chiếm toàn bộ nút */
                height: 100%; /* Để a chiếm toàn bộ chiều cao nút */
                width: 100%; /* Để a chiếm toàn bộ chiều rộng nút */
            }
    </style>
</head>
<body>

    <div class="sidebar">
        <ul style="list-style-type: none; padding: 0;">
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('checking-submenu')">Checking Request</a>
                <ul id="checking-submenu" class="submenu">
                    <li><a href="/CheckingPages/View">View</a></li>
                    <li><a href="/CheckingPages/Create">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('productline-submenu')">ProductLine</a>
                <ul id="productline-submenu" class="submenu">
                    <li><a href="/ProductPages/UpdateQuantity">Update quantity</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('manager-submenu')">Manager account</a>
                <ul id="manager-submenu" class="submenu">
                    <li><a href="/AccountPages/ViewAllManager">View</a></li>
                    <li><a href="/AccountPages/CreateManager">Create</a></li>
                </ul>
            </li>
            
        </ul>
        <button class="logout-button">
            <a href="/Logout">Logout</a>
        </button>
    </div>

    <div style="margin-left: 220px; padding: 20px;">
        @RenderBody()
    </div>

    <script>
        function toggleSubmenu(id) {
            var submenu = document.getElementById(id);
            if (submenu.style.display === "block") {
                submenu.style.display = "none";
            } else {
                var submenus = document.getElementsByClassName("submenu");
                for (var i = 0; i < submenus.length; i++) {
                    submenus[i].style.display = "none";
                }
                submenu.style.display = "block";
            }
        }
    </script>
</body>
</html>
