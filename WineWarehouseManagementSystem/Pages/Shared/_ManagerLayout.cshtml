<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WineWarehouseManagementSystem</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .sidebar {
            background-color: lightgray;
            color: black;
            padding: 15px;
            width: 200px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            border-right: 2px solid black;
        }

        .menu-item {
            margin: 15px 0;
        }

            .menu-item a {
                color: #5cb85c;
                text-decoration: none;
                font-weight: bold;
            }

        .submenu {
            display: none;
            list-style-type: none;
            padding-left: 15px;
            margin-top: 5px;
        }

            .submenu li a {
                color: white;
                text-decoration: none;
            }

        /* CSS cho nút Logout */
        .logout-button {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #d9534f; /* Màu đỏ cho nút logout */
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            display: block; /* Để nút chiếm toàn bộ chiều rộng */
        }

            .logout-button a {
                color: white; /* Đảm bảo chữ màu trắng */
                text-decoration: none; /* Không có gạch chân */
                display: block; /* Để a chiếm toàn bộ nút */
                height: 100%; /* Để a chiếm toàn bộ chiều cao nút */
                width: 100%; /* Để a chiếm toàn bộ chiều rộng nút */
            }

    </style>
    <link rel="stylesheet" href="./css/ExportPageStyle.css">
</head>
<body>

    <div class="sidebar">
        <ul style="list-style-type: none; padding: 0;">
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('product-submenu')">Product</a>
                <ul id="product-submenu" class="submenu">
                    <li><a href="/ProductPages/View">View</a></li>
                    <li><a href="/ProductPages/Create">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('import-submenu')">Import</a>
                <ul id="import-submenu" class="submenu">
                    <li><a href="/ImportPages/View">View</a></li>
                    <li><a href="/ImportPages/Create">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('export-submenu')">Export</a>
                <ul id="export-submenu" class="submenu">
                    <li><a href="/ExportPages/View">View</a></li>
                    <li><a href="/ExportPages/Create">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('brewingroom-submenu')">BrewingRoom</a>
                <ul id="brewingroom-submenu" class="submenu">
                    <li><a href="/RoomPages/ViewBrewingRoom">View</a></li>
                    <li><a href="/RoomPages/CreateBrewingRoom">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('shelf-submenu')">Shelf</a>
                <ul id="shelf-submenu" class="submenu">
                    <li><a href="/RoomPages/ViewShelf">View</a></li>
                    <li><a href="/RoomPages/CreateShelf">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('category-submenu')">Category</a>
                <ul id="category-submenu" class="submenu">
                    <li><a href="/CategoryPages/View">View</a></li>
                    <li><a href="/CategoryPages/Create">Create</a></li>
                </ul>
            </li>
            <li class="menu-item">
                <a href="#" onclick="toggleSubmenu('staff-submenu')">Staff</a>
                <ul id="staff-submenu" class="submenu">
                    <li><a href="/AccountPages/ViewAllStaff">View</a></li>
                    <li><a href="/AccountPages/CreateStaff">Create</a></li>
                </ul>
            </li>
        </ul>

        <!-- Nút Logout -->
        <button class="logout-button">
            <a href="/Logout">Logout</a>
        </button>
    </div>

    <div style="margin-left: 220px; padding: 20px;">
        @RenderBody()
    </div>

    <script>
        function toggleSubmenu(id) {
            var submenu = document.getElementById(id);
            if (submenu.style.display === "block") {
                submenu.style.display = "none";
            } else {
                var submenus = document.getElementsByClassName("submenu");
                for (var i = 0; i < submenus.length; i++) {
                    submenus[i].style.display = "none";
                }
                submenu.style.display = "block";
            }
        }
    </script>
</body>
</html>
