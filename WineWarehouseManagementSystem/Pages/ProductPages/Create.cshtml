@page
@model WineWarehouseManagementSystem.Pages.ProductPages.CreateModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}
<style>
    select {
        width: 100%;
        margin-top: 6px;
        padding: 10px 14px;
        border: none;
        border-radius: 4px;
        background-color: #f1f1f1;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
    }

    input {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 18px;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
    }
    <!-- HTML ! -->
    /* CSS */
    button {
        background: linear-gradient(to bottom right, #EF4765, #FF9A5A);
        border: 0;
        border-radius: 8px;
        background-color: #4CAF50;
        color: #FFFFFF;
        cursor: pointer;
        display: inline-block;
        font-family: -apple-system,system-ui,"Segoe UI",Roboto,Helvetica,Arial,sans-serif;
        font-size: 16px;
        font-weight: 500;
        line-height: 2.5;
        outline: transparent;
        padding: 0 1rem;
        text-align: center;
        text-decoration: none;
        transition: box-shadow .2s ease-in-out;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
    }

    button:not([disabled]):focus {
        box-shadow: 0 0 .25rem rgba(0, 0, 0, 0.5), -.125rem -.125rem 1rem rgba(239, 71, 101, 0.5), .125rem .125rem 1rem rgba(255, 154, 90, 0.5);
    }

    button:not([disabled]):hover {
        box-shadow: 0 0 .25rem rgba(0, 0, 0, 0.5), -.125rem -.125rem 1rem rgb(139 239 71 / 50%), .125rem .125rem 1rem rgb(139 249 69 / 60%);
    }

    form {
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<h2 style="text-align: center; font-family: Comic San MS; font-size:50px; color:#141e30; font:400">Create Product</h2>

@if (TempData["Message"] != null)
{
    <h3 style="color: green; text-align: center;">@TempData["Message"]</h3>
}

<div style="display: flex; justify-content: center;">
    <form method="post" style="width: 50%; max-width: 600px; padding: 20px; border: 1px solid #ccc; border-radius: 10px;">
        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.ProductName" class="form-label">Product Name</label>
            <input asp-for="Product.ProductName" class="form-control" />
        </div>

        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.ProductDescription" class="form-label">Product Description</label>
            <input asp-for="Product.ProductDescription" class="form-control" />
        </div>

        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.Origin" class="form-label"></label>
            <input asp-for="Product.Origin" class="form-control" />
        </div>

        <div style="margin-bottom: 14px; display: flex; flex-direction: column; cursor: pointer;">
            <label asp-for="Product.CategoryId" class="form-label">Category</label>
            <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-select"></select>
        </div>

        <div style="text-align: center;">
            <button type="submit" style="background-color: #4CAF50; color: #FFFFFF;padding: 10px 20px; margin-top:4px; border: none; border-radius: 5px; cursor: pointer;">
                Create product
            </button>
        </div>
    </form>
</div>

