@page
@model WineWarehouseManagementSystem.Pages.ProductPages.CreateModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}
<style>

    select {
        width: 100%;
        margin-top: 6px;
        padding: 10px 14px;
        border: none;
        border-radius: 4px;
        background-color: #f1f1f1;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
    }

    input {
        margin-top: 8px;
        height: 40px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
        transition: all 0.3s ease;
    }

        input:focus, input:valid {
            border-color: #1e0d52;
        }

        input:hover {
            box-shadow: rgba(61, 87, 113, 0.197) 0px 8px 24px;
        }

    button {
        margin: 10px 10px 10px 200px;
        padding: 15px 30px;
        text-align: center;
        text-transform: uppercase;
        transition: 0.5s;
        background-size: 200% auto;
        color: white;
        border-radius: 10px;
        display: block;
        border: 0px;

        font-weight: 700;
        box-shadow: 0px 0px 14px -7px #93f686;
        background-image: linear-gradient(45deg, #14ae00 0%, #93f686 51%, #14ae00 100%);
        cursor: pointer;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        button:hover {
            background-position: right center;
            /* change the direction of the change here */
            color: #fff;
            text-decoration: none;
        }

        button:active {
            transform: scale(0.95);
        }


    form {
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    }

    .form-label {
        font-family: 'Roboto Mono', monospace;
        font-size: 19px;
    }
</style>

<h2 style="text-align: center; font-family: Comic San MS; font-size:50px; color:white; font:400; margin-bottom:4px">Create Product</h2>

@if (TempData["Message"] != null)
{
    <h3 style="color: green; text-align: center;">@TempData["Message"]</h3>
}

<div style="display: flex; justify-content: center;">
    <form method="post" style="width: 50%; background-color: white;max-width: 600px; padding: 20px; border: 1px solid #ccc; border-radius: 10px;">
        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.ProductName" class="form-label"></label>
            <input asp-for="Product.ProductName" class="form-control" />
        </div>

        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.ProductDescription" class="form-label"></label>
            <input asp-for="Product.ProductDescription" class="form-control" />
        </div>

        <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
            <label asp-for="Product.Origin" class="form-label"></label>
            <input asp-for="Product.Origin" class="form-control" />
        </div>

        <div style="margin-bottom: 14px; display: flex; flex-direction: column; cursor: pointer;">
            <label asp-for="Product.CategoryId" class="form-label"></label>
            <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-select"></select>
        </div>

        <div style="text-align: center;">
            <button type="submit" style="background-color: #4CAF50; color: #FFFFFF;padding: 10px 20px; margin-top:4px; border: none; border-radius: 5px; cursor: pointer;">
                Create product
            </button>
        </div>
    </form>
</div>

