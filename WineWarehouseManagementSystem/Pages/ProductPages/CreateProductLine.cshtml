@page
@model WineWarehouseManagementSystem.Pages.ProductPages.CreateProductLineModel
@{
    Layout = "_ManagerLayout";
    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || roleId != 2)
    {
        TempData["ErrorMessage"] = "This function is for manager only";
        Response.Redirect("/Error");
    }
}

<style>
    body {
        overflow-y: auto;
    }
    button {
        /* margin: 10px; */
        margin: 10px 10px 10px 14%;
        text-align: center;
        text-transform: uppercase;
        transition: 0.5s;
        background-size: 200% auto;
        color: white;
        border-radius: 10px;
        display: block;
        border: 0px;
        font-weight: 700;
        box-shadow: 0px 0px 14px -7px #93f686;
        background-image: linear-gradient(45deg, #14ae00 0%, #93f686 51%, #14ae00 100%);
        cursor: pointer;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        button:hover {
            background-position: right center;
            /* change the direction of the change here */
            color: #fff;
            text-decoration: none;
        }

        button:active {
            transform: scale(0.95);
        }

    input {
        margin-top: 8px;
        height: 40px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
        transition: all 0.3s ease;
    }

        input:focus, input:valid {
            border-color: #1e0d52;
        }

        input:hover {
            box-shadow: rgba(61, 87, 113, 0.197) 0px 8px 24px;
        }

    label {
        font-family: 'Roboto Mono', monospace;
        font-size: 19px;
    }
</style>

<h1 style="font-family: Comic San MS; font-size:40px; color:white; font:400; text-align:center;">Create productline for import ID :@Model.ImportId</h1>
@if (TempData["Message"] != null)
{
    <h2 style="text-align: center; color: green;">@TempData["Message"]</h2>
}
<form method="post" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; box-shadow: rgba(0, 0, 0, 0.09) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;">
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.ProductId" style="margin-bottom: 5px; font-weight: bold;">Product</label>
        <select asp-for="productLine.ProductId" asp-items="Model.ProductList"
                style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
        </select>
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.ProductYear" style="margin-bottom: 5px; font-weight: bold;">Year</label>
        <input asp-for="productLine.ProductYear" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.ProductAlcohol" style="margin-bottom: 5px; font-weight: bold;">Alcohol Content</label>
        <input asp-for="productLine.ProductAlcohol" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.Capacity" style="margin-bottom: 5px; font-weight: bold;">Capacity</label>
        <input asp-for="productLine.Capacity" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.Price" style="margin-bottom: 5px; font-weight: bold;">Price</label>
        <input asp-for="productLine.Price" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.Quantity" style="margin-bottom: 5px; font-weight: bold;">Quantity</label>
        <input asp-for="productLine.Quantity" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="productLine.ShelfId" style="margin-bottom: 5px; font-weight: bold;">Shelf</label>
        <select asp-for="productLine.ShelfId" asp-items="Model.ShelfList"
                style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
        </select>
    </div>

    <div style="text-align: center;">
        <button type="submit"
                style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
            Create product line and import detail
        </button>
    </div>
</form>
