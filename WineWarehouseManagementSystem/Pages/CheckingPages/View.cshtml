@page
@model WineWarehouseManagementSystem.Pages.CheckingPages.ViewModel
@{

    int? accountId = HttpContext.Session.GetInt32("accountId");
    int? roleId = HttpContext.Session.GetInt32("roleId");
    if (accountId == null || (roleId != 3 && roleId != 1))
    {
        TempData["ErrorMessage"] = "This function is for admin and staff only";
        Response.Redirect("/Error");
    }
    if(roleId == 3)
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_StaffLayout";
    }
    ViewData["Title"] = "View Checking Requests";
}
<h2>View Checking Requests</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.CheckingRequests != null && Model.CheckingRequests.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Request ID</th>
                <th>Account ID</th>
                <th>Product ID</th>
                <th>Check Date Request</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.CheckingRequests)
            {
                <tr>
                    <td>@request.CheckingRequestId</td>
                    
                    <td>@request.CheckDateRequest?.ToString("yyyy-MM-dd")</td>
                    <td>@request.Reason</td>
                    <td>@request.CheckingStatus</td>
                    <td>
                        @if (roleId == 1)
                        {
                            <form method="get" asp-page="/ReportPages/Create" style="margin: 0;">
                                <button type="submit" style="padding: 6px 12px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                    Create Report
                                </button>
                            </form>
                            
                        }else if(roleId == 3)
                        {
                            <form method="get" asp-page="/ReportPages/View" style="margin: 0;">
                                <button type="submit" style="padding: 6px 12px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                    Create Report
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No checking requests available.</p>
}
@if (roleId == 1)
{
    <form method="get" asp-page="/StaffPage" style="margin: 0;">
        <button type="submit" style="padding: 6px 12px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
            Go to Staff Page
        </button>
    </form>
}
else if (roleId == 3)
{
    <form method="post" asp-page="/CheckingPages/View" style="margin: 0;">
        <button type="submit" style="padding: 6px 12px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
            View all checking request

        </button>
    </form>
}
