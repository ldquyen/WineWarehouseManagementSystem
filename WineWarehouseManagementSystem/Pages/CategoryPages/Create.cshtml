@page
@model WineWarehouseManagementSystem.Pages.CategoryPages.CreateModel
@{
    Layout = "_ManagerLayout";
}

<h1>Create new category</h1>

@if (TempData["Message"] != null)
{
    <h2 style="text-align: center; color: #4CAF50;">@TempData["Message"]</h2>
}

<form method="post" style="max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <div style="margin-bottom: 15px; display: flex; flex-direction: column;">
        <label asp-for="category.CategoryName" style="margin-bottom: 5px; font-weight: bold;">Category Name</label>
        <input asp-for="category.CategoryName" required
               style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="text-align: center;">
        <button type="submit"
                style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
            Create Category
        </button>
    </div>
</form>

